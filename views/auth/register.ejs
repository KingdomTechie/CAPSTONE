<%- include("../partials/header.ejs"); %>

<html>
    <body>
      <div class="full_register_div">
      <div class="register_form_div">
        <form action="/register" method="POST" class="register_form">
          <section class="register_left">
          <h1>Register for an account</h1>
            <div class="mb-3">
                <label class="form-label">First Name</label>
                <input type="text" class="form-control"  aria-describedby="firstNameHelp" name="firstName">
              </div>
              <div class="mb-3">
                <label class="form-label">Last Name</label>
                <input type="text" class="form-control"  aria-describedby="lastNameHelp" name="lastName">
              </div>
              <div class="mb-3">
                <label class="form-label">Username</label>
                <input required="required" type="text" class="form-control"  aria-describedby="lastNameHelp" name="username">
              </div>
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Email address</label>
              <input required="required" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" name="email">
              <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label">Password</label>
              <input required="required" type="password" class="form-control" id="exampleInputPassword1" name="password">
            </div>
          </section>
           
          <section class="register_right">
            <h1>Let's get some starter data going....</h1>
            <div class="mb-3">
              <label class="form-label">Desired Salary</label>
              <input type="text" class="form-control"  aria-describedby="desiredSalary" name="desiredSalary">
            </div><div class="mb-3">
              <label class="form-label">Desired Industry</label>
              <input type="text" class="form-control"  aria-describedby="desiredSalary" name="desiredIndustry">
            </div>
            <div class="mb-3">
              <label class="form-label">Desired City</label>
              <input type="text" class="form-control"  aria-describedby="desiredSalary" name="desiredCity">
            </div>
            <div class="mb-3">
              <label class="form-label">Profile Photo</label>
              <input type="text" class="form-control"  aria-describedby="desiredSalary" name="profileImg">
            </div>
            <div class="mb-3">
              <label class="form-label">Skills</label>
              <input type="text" class="form-control"  aria-describedby="desiredSalary" name="skills">
            </div>
          </section>

            <div class="register_form_button">
            <button type="submit" class="btn btn-primary">Register</button>
          </div>
          </form>
        </div>
      </div>
    </body>
</html>